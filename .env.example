# Tribe MVP Environment Variables Example
# Copy this file to .env and fill in your actual values

# Linear Integration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_PROJECT_ID=your_linear_project_id_here

# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# External API Keys (Optional - Template system reduces AI API usage by 90%)
OPENAI_API_KEY=your-openai-api-key

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=updates@colinrodrigues.com
SENDGRID_FROM_NAME=Tribe
REPLY_TO_DOMAIN=colinrodrigues.com

# Email Webhook Configuration (for inbound email processing)
WEBHOOK_SECRET=your-webhook-secret-for-email-processing
MEMORY_EMAIL=memory@colinrodrigues.com
INBOUND_EMAIL_DOMAIN=colinrodrigues.com

# Application Configuration
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000
APP_DOMAIN=www.colinrodrigues.com

# Database (for direct connections if needed)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Development/Testing
NODE_ENV=development